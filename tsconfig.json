{
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES2020",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "lib": ["ES2020"],
    "typeRoots": [
      "./miniprogram/typings"
    ],
    "baseUrl": ".",
    "types": ["miniprogram-api-typings"],
    "paths": {
      "*": ["./miniprogram/*"]
    },
    "importHelpers": false
  },
  "include": [
    "./miniprogram/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
