/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  box-sizing: border-box;
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
}

.header {
  text-align: center;
  padding: 120rpx 0;
  animation: fadeIn 0.8s ease-out;
}

.title {
  font-size: 72rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #1976D2 0%, #2196F3 100%);
  -webkit-background-clip: text;
  color: transparent;
  text-shadow: 0 4rpx 12rpx rgba(25, 118, 210, 0.1);
  margin-bottom: 24rpx;
  letter-spacing: 4rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #1976D2;
  margin-top: 24rpx;
  display: block;
  letter-spacing: 2rpx;
  opacity: 0.8;
}

.content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
  padding: 60rpx 40rpx;
  animation: slideUp 0.8s ease-out;
}

.btn-primary {
  width: 85%;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #2196F3;
  border-radius: 55rpx;
  box-shadow: 0 8rpx 24rpx rgba(33, 150, 243, 0.2);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn-primary::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 100%);
}

.btn-secondary {
  width: 65%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10px);
  border: 2rpx solid rgba(33, 150, 243, 0.3);
  border-radius: 50rpx;
  transition: all 0.3s ease;
}

.btn-text {
  font-size: 34rpx;
  letter-spacing: 2rpx;
}

.btn-primary .btn-text {
  color: white;
  font-weight: 600;
}

.btn-secondary .btn-text {
  color: #1976D2;
  font-weight: 500;
}

.footer {
  margin: 80rpx 0;
  animation: fadeIn 1s ease-out;
}

.tips {
  font-size: 28rpx;
  color: #1976D2;
  text-align: center;
  letter-spacing: 1rpx;
  opacity: 0.8;
}

.button-hover {
  transform: translateY(2rpx) scale(0.98);
  opacity: 0.9;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
