.container {
  min-height: 100vh;
  background: linear-gradient(135deg, var(--primary-light) 0%, #FFFFFF 100%);
  padding: 40rpx;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 60rpx;
}

/* 图片预览区域 */
.image-container {
  width: 100%;
  height: 500rpx;
  border-radius: 24rpx;
  overflow: hidden;
  position: relative;
  box-shadow: var(--card-shadow);
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(4px);
}

/* 提示信息 */
.message-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  text-align: center;
  padding: 40rpx;
}

.icon {
  margin-bottom: 16rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--primary-dark);
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  letter-spacing: 1rpx;
}

/* 按钮组 */
.button-group {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  width: 100%;
  padding: 0 30rpx;
  margin-top: 20rpx;
}

.btn-retry {
  width: 100%;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--primary-color);
  border-radius: 55rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 87, 34, 0.2);
  color: white;
  font-size: 34rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  transition: all 0.3s ease;
}

.btn-home {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10px);
  border: 2rpx solid rgba(255, 87, 34, 0.3);
  border-radius: 50rpx;
  color: var(--primary-color);
  font-size: 34rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
  transition: all 0.3s ease;
}

.btn-retry:active,
.btn-home:active {
  transform: translateY(2rpx);
  opacity: 0.9;
} 